extends ../layout.pug

block body
  .card
    .card-header
       h3.card-title Единицы измерения
       a.float-right.btn.btn-success(type="button" href="/unit/edit") Добавить
    .card-body
      #jsGrid

append script
    script.
      $(() => {
        $('#jsGrid').jsGrid({
          height: "auto",
          width: "100%",
          editing: false,
          filtering: false,
          autoload: true,
          sorting: true,
          paging: false,
          rowClick: function(args) {
            window.location.href=`/unit/edit/${args.item.id}`
          },
          controller: {
            loadData: () =>
              $.ajax({
                url: `http://${window.location.host}/api/unit`
              })
          },
          fields: [
            { name: 'id' },
            { title: "Код", name: "code", type: "number" },
            { title: "Наименование", name: "title", type: "text" },
            { title: "Аббревиатура", name: "short", type: "text" },
            // { name: "createdAt" },
            // { name: "updatedAt" }
          ]
        })
      })