extends ../layout.pug

block body
  .card: form(method='post' enctype='application/x-www-form-urlencoded')
    .card-header
      h3.card-title Удалить единицу измерения
    .card-body
      h3 Код
      p= instance.code
      h3 Наименование
      p= instance.title
      h3 Аббревиатура
      p= instance.short
    .card-footer
      button.btn.btn-danger(type="submit") Подтвердить удаление
